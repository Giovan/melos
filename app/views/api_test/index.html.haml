- @sidebar = false
- @main_nav = false
- require 'descriptive_statistics'

%article
  -if @results
    %table
      %tr
        %th <strong>API Call</strong>
        %th <strong>Mean (ms)</strong>
        %th <strong>1Ïƒ (ms)</strong>
        %th <strong>Raw Times</strong>
      - @results.each do |r|
        %tr
          %td= r[:title]
          %td= r[:times].mean.round(0)
          %td= r[:times].standard_deviation.round(0)
          %td= r[:times].to_s
  -else
    %h1 Stranger Danger!
