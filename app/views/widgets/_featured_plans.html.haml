- featured_plans = Plan.featured(page: 1, language_tag: I18n.locale)
- plans = featured_plans.nil? ? [] : featured_plans.shuffle![0..2] 

- if plans.present?
  .widget.featured-plans{style: "display:none"}
    %h3.hd
      = t("plans.widget.featured plans")
    .plans-list
      %ul
        - plans.each do |plan|
          %li
            %h3= link_to plan.name, plan_path(plan)
            %p= truncate(plan.about, length: 90, separator: ' ')
    .ft
      = link_to(t("plans.widget.view all plans"), plans_path)