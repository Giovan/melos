

- @meta_url = "https://#{request.host_with_port}#{request.fullpath}"
- @subtitle = ''  # keeps end of title clean


.row
  .medium-8.columns
    %article
      %div#svp_share.addthis_sharing_toolbox{"data-url" => "#{@meta_url}", "style" => "float: right;"}
      -#%h1
      -#  t('Language Name')
      %ul.no-bullet
        - @versions_by_lang.each do |lang, versions|
          - if versions.present?
            %li
              - meta_language = versions.first.attributes.language.local_name
              - meta_language = "#{meta_language} | #{versions.first.attributes.language.name}" if (versions.first.attributes.language.name.present? and not (meta_language.eql?(versions.first.attributes.language.name)))
              %ul.no_bullet
                - show_lang_title = true
                - versions.each do |version|
                  - if version.language.id.eql?(@language.to_s)
                    - if show_lang_title
                      %h1
                        - @title    = "Download the #{meta_language} Bible"
                        Download the Free Bible App!
                        %br= "Language: #{meta_language}"
                      - show_lang_title = false
                    %li
                      = link_to "#{version.title} (#{version.abbreviation.upcase})" , version_path(version), {target: "_self"}

  .medium-4.columns.show-for-medium-up.l-border
    = render partial: 'widgets/download_app', :locals => {show_sms: true}

= render '/shared/app_banner'

