- @title = "#{@reference.ref_string} #{@reference.version_string}"
- @reader_menus = true
- @is_reader = true
- @canonical = reference_url(@reference)

- content_for :sidebar do
  = render partial: '/shared/widget_bookmarks_stub' if current_auth
  = render_cell :notes_list_widget, :stub, title: t("notes.community notes"), reference: @reference.osis
  = render '/shared/widget_ad_bible_app'
  = render partial: '/shared/widget_parallel_notes', locals: {hide_widget: true}

= render partial: 'reader_header'

%article{"data-setting-font" => @font, 'data-setting-size' => @size, "data-selected-verses" => "[#{@verses}]", "data-verse-modal-enabled" => "#{!@single_verse.nil?}", "data-fullscreen" =>@full_screen, "data-book" => @reference[:book].to_s, "data-book-api" => @reference[:book].sub(/[a-z]/) {|m| m.upcase}, "data-book-human" => @version.books[@reference[:book]].human, "data-chapter" => @reference[:chapter].to_s, "data-version" => @reference[:version].to_s}
  %div.nav_items
    - direction = 'rtl' if @version.try(:rtl?)
    = link_to("previous", bible_path(@reference.previous), class: "nav_prev #{direction}") if @reference.previous
    = link_to("next", bible_path(@reference.next), class: "nav_next #{direction}") if @reference.next
  #version_primary{"data-reference" => @reference.osis, class: @version.try(:text_direction)}
    - @reference.contents.each do |r|
      = r.html_safe
  -# TODO: Make boom sauce, to compliment the awesome sauce.
  -# Aka: Make this thing output a secondary Bible version, KJV or sumthin'.
  #version_secondary{"data-reference" => @alt_reference.osis, class: @alt_version.try(:text_direction)}
    - @alt_reference.contents.each do |r|
      = r.html_safe

%footer
  %p
    %b= link_to t("ref.about the version", version: @version), version_path(@version)
  %p= @reference.copyright
