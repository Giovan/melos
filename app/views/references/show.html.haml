- @title = 'Reader'
- @reader_menus = true
- @is_reader = true





%header
  %ul.float_left
    %li.gutter_right_quarter
      = @reference.ref_string
    %li
      %a.dynamic_menu_trigger.drop_down_arrow{:href => '#menu_book_chapter', :title => 'Choose Book + Chapter'}
        %span Choose Book + Chapter
    %li.separator
      %a.dynamic_menu_trigger.drop_down_select{:href => '#menu_version', :title => 'Choose Version'}
        %b= @reference.version_string
        %span Choose Version
  %ul.float_right
    %li
      %a.button{:href => '#', :title => 'Share'}
        %b.icon_share
          Selected
          -# %sup
            -# 3
    %li
      %a.button{:href => '#', :title => 'Preferences'}
        %span.icon_preferences
          Preferences
    %li
      %a.button{:href => '#', :title => 'Listen'}
        %span.icon_listen
          Listen
    %li
      %a.button{:href => '#', :title => 'Parallel'}
        %span.icon_parallel
          Parallel
    %li
      %a.button{:href => '#', :title => 'Full Screen'}
        %span.icon_full_screen
          Full Screen

%article
  - @reference.contents.each do |r|
    = r.html_safe

%footer
  %p
    %b
      %a{:href => '#'}
        About the
        = @version
  %p= @reference.copyright