- @title = t("reader")
- @reader_menus = true
- @is_reader = true

- content_for :sidebar do
  = render '/shared/widget_bookmarks'
  = render_cell :notes_list_widget, :display, notes: @notes, title: t("notes.community notes")
  = render '/shared/widget_ad_bible_app'

#reader_header
  %header
    %ul.float_left
      %li.gutter_right_quarter
        = @reference.ref_string
      %li
        %a#menu_book_chapter_trigger.dynamic_menu_trigger.drop_down_arrow{:href => '#menu_book_chapter', :title => t("ref.choose book and chapter")}
	        %span=t("ref.choose book and chapter")
	    %li.separator
	      %a#menu_version_trigger.dynamic_menu_trigger.drop_down_select{:href => '#menu_version', :title => t("ref.choose version")}
	        %b= @reference.version_string
	        %span=t("ref.choose version")
    %ul.float_right
      %li
        %a#verses_selected_button.dynamic_menu_trigger.button.hide{:href => '#menu_bookmark', :title => t("ref.share")}
          %b.icon_share
             =t("ref.selected")
            %sup#verses_selected_count
              0
        %form{action: '', id: 'verses_selected_form', method: 'get'}
          %input.verses_selected_input{name:'verses', type: 'hidden', value: ''}
      %li
	      %a.button{:href => '#', :title => t("ref.preferences")}
	        %span.icon_preferences
	          =t("ref.preferences")
	    %li
	      %a.button{:href => '#', :title => t("ref.listen")}
	        %span.icon_listen
	          =t("ref.listen")
	    %li
	      %a.button{:href => '#', :title => t("ref.parallel")}
	        %span.icon_parallel
	          =t("ref.parallel")
	    %li
	      %a.button{:href => '#', :title => t("ref.full screen")}
	        %span.icon_full_screen
	          =t("ref.full screen")

%article{"data-book" => @reference[:book].to_s, "data-chapter" => @reference[:chapter].to_s, "data-version" => @reference[:version].to_s}
  - @reference.contents.each do |r|
    = r.html_safe

%footer
  %p
    %b
      %a{:href => '#'}
        =t("ref.about the")
        = @version
  %p= @reference.copyright
