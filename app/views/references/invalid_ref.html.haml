- @title = @reference.to_s
- @reader_menus = true
- @share_menu = false
- @verse_modals = false

= render partial: 'reader_header'

%article
  %div{style:"text-align: center; margin-top:70px"}
    %h1= t("ref.invalid chapter title")
    %p= t("ref.invalid chapter text")
    %div.dynamic_menu_trigger.no_style{:href=> '#menu_book_chapter', style: "height: 0; margin-left:68px"}
      %button{style: "margin-left:-68px"}= t("ref.select another chapter")

%footer
  %p
    %b= link_to t("ref.about the version", version: @version), version_path(@version)
  %p= @version.copyright
