%p= info

.settings-group
  %span.settings-group-email
    = check_box_tag "settings[#{type.to_s}][email]", "1", @settings.notification_settings.send(type.to_sym).email if @settings.notification_settings.send(type.to_sym).present?
    = label_tag "settings[#{type.to_s}][email]", t("users.email")

  - unless type == "newsletter"
    %span.settings-group-mobile
      = check_box_tag "settings[#{type.to_s}][push]", "1", @settings.notification_settings.send(type.to_sym).push if @settings.notification_settings.send(type.to_sym).present?
      = label_tag "settings[#{type.to_s}][push]", t("users.mobile")