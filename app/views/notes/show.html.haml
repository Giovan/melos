%article
  #note
    %h1= @note.title
    %p.mute= link_to_references(@note.reference)
    %p= raw(@note.content)
    %p
      = label_tag :user_status, t("notes.status field")
      = @note.user_status
      = button_to(@note.like_for_user.nil? ? t("likes.like button text") : t("likes.unlike button text"), like_path(@note.id), :method => :put) if @note.user_status == 'public'
    - if current_auth.user_id == @note.user_id.to_i
    = link_to(t("note.edit"), edit_note_path(@note.id))
    = link_to(t("note.delete"), note_path(@note.id), :confirm => t("note.confirm delete"), :method => :delete)
