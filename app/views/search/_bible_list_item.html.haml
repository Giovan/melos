- item = bible_list_item

%li.reference
  - if item.reference.usfm.present?
    %h3
      = link_to "#{item.reference.human} (#{item.version.local_abbreviation.upcase || item.version.abbreviation.upcase})", bible_path(Reference.new(item.reference.usfm, version: item.version.id))

  - if item.highlight.present? || item.content.present?
    %p
      = item.highlight ? item.highlight.html_safe : item.content