- @sidebar = false
- content_for :typekit_javascripts do
  = javascript_include_tag '//use.typekit.net/mgk8ovf.js'
  :javascript
    try{Typekit.load();}catch(e){}

%article.social-intro
  %h1.intro-title
    = t("social.intro page.main heading")
  %p.intro-copy
    = t("social.intro page.main description")

  .intro-moment
    .intro-moment-box
      .moment
        -# !the content of the moment
        .moment-top
          .moment-bm
            %span.moment-icon
              &nbsp;
            %span.moment-avatar
              = image_tag "josh_avatar.png"
            %span.moment-time
              = t("social.intro page.moment.timestamp")

            %h2.moment-bm-text
              %a.moment-title-link{href:"#"}
                = t("social.intro page.moment.user aaron")
                = t("social.intro page.moment.title")

            .moment-verse-wrap
              %p.moment-verse
                = t("social.intro page.moment.verse")

              %a{href: "#", class: "moment-verse-link"}
                = t("social.intro page.moment.reference")

        -# !share controls, dates, and comments
        .moment-actions
          %span.moment-actions-like
            %a{href:"#", title: t("moments.action.like title")}
              = t("moments.action.like")
          %span.moment-actions-comment
            %a{href: "#"}
              = t("moments.action.comment")

  .intro-discover-copy
    %p
      = t("social.intro page.moment.discover.copy")
    %span
      &nbsp;

  .intro-comments
    .moment-comments
      %span.moment-comments-more
        %a{href: "#"}= t("social.intro page.moment.user andy")
        = t("social.intro page.moment.likes.info")

      %ul.moment-comments-list
        
        %li.moment-comments-list-comment
          %span.moment-comments-list-avatar
            = image_tag "andy_avatar.png"
          %p.moment-comments-list-text
            %a{href: "#"}= t("social.intro page.moment.user andy")
            = t("social.intro page.moment.comments.first.text")
            %span.moment-comment-dt
              = t("social.intro page.moment.comments.first.time")
        
        %li.moment-comments-list-comment
          %span.moment-comments-list-avatar
            = image_tag "josh_avatar.png"
          %p.moment-comments-list-text
            %a{href: "#"}= t("social.intro page.moment.user aaron")
            = t("social.intro page.moment.comments.second.text")
            %span.moment-comment-dt
              = t("social.intro page.moment.comments.second.time")

      = form_tag(comments_url, method: "post") do
        %span.moment-comments-input
          %span.moment-comments-input-avatar
            = image_tag "josh_avatar.png"
          %textarea{class: "moment-comments-textarea comment-field"}
            = t("social.intro page.moment.comments.field placeholder")

  .intro-share-copy
    %span
      &nbsp;
    %p
      = t("social.intro page.moment.share.copy")

  .intro-discover-copy-btn
    %a{href: moments_path, class: "action_button_green"}
      = t("social.intro page.moment.discover.button")

  .intro-share-copy-btn
    %a{href: "#", class: "action_button_blue", id: "intro-find-friends-button"}
      = t("social.intro page.moment.share.button")

  :javascript
    $("#intro-find-friends-button").click(function(event){
      event.preventDefault();
      var link = $(event.currentTarget);
          if (link.hasClass("active")) {
            link.removeClass("active");
            Events.Emitter.emit("menu:friend-requests:close");
          }
          else {
            link.addClass("active");
            Events.Emitter.emit("menu:friend-requests:open");
          }
    });