:ruby
  # Used in
  # sidebars/notes/default
  # references/notes

  # Local variables
  # notes  (required)
  # link   (optional)
  # title  (optional)
  
   title = title || "Notes"
   link = link || notes_path

#widget-notes.widget
  %div.hd
    %span
      = @title
    %a.count{href: @link}
      = @notes.total || 0

  - unless @notes.empty?
    %table
      %tbody
      - @notes.first(8).each do |note|
        %tr
          %th
            %a
              %img.avatar_small{src: note.user_avatar_url.px_24x24}
          %td
            %a= link_to note.title, note_path(note.id)
            %p.mute.small= note.username

    %div.ft.align_right
      %a.more_arrow{href: @link}= t('show all notes', total: @notes.total)

  - else
    %div.bd
      %p= t('notes.no community notes')