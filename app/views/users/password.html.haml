- @title = "#{t('users.change my password')} | #{@user.name || @user.username}"

= form_for :user, url: update_password_user_path(@user), method: :put do |f|
  %p
    = f.label :old_password, t('users.profile.current password')
    %br
    = f.password_field :old_password
  %hr
  %p
    = f.label :password, t('users.profile.new password')
    %br
    = f.password_field :password
  %p
    = f.label :confirm_password, t('users.profile.confirm password')
    %br
    = f.password_field :confirm_password
  %p
    = f.submit t('users.my password')
