- @title = @me ? t('users.my profile') : t('users.other user profile', username: @user.name || @user.username)
- content_for :title do
  = @title

.social-feed-wrap{"data-username" => @user.username}
  -# :javascript
    $(document).ready(function(){
      var feed = new Moments.UserFeed();
    });

.row.ng-hide{"ng-show" => "moments.length == 0"}
  .columns.medium-12
    .profile-blank-slate.slate-activity
      - if current_user_is? @user
        %h2
          = t("users.profile.blank slate.heading")
        %p
          = t("users.profile.blank slate.description")
      - else
        %h2
          = t("users.profile.blank slate.heading")

.row.pad-row
  .medium-8.columns.medium-offset-2
    %div{"ng-repeat" => "moment in moments"}
      %moment{:data => "moment", "social-enabled" => "false"}
    %div{:layout => "row", "layout-align" => "space-around", "layout-sm" => "column", "ng-if" => "loading"}
      %md-progress-circular{"md-mode" => "indeterminate"}
    %button.solid-button.green.full{"ng-click" => "loadMore()", "ng-if" => "!loading"}= t('moments.action.load more')