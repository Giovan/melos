%div{style: "padding: 0 20px"}

  - @title = "#{t('users.picture')} | #{@user.name || @user.username}"

  -if @user.errors.any?
    .form_errors
      =t("picture_creation form errors")
      %ul
        - @user.errors.each do |e|
          %li= t("users.profile.#{e}")

  %img.avatar_huge{src: @user.s3_user_avatar_url['px_128x128'] + '?' + rand(1000000).to_s}
  - ['24x24', '48x48', '128x128', '512x512'].each do |s|
    %img{src: @user.s3_user_avatar_url["px_#{s}"] + '?' + rand(1000000).to_s, style: 'display: none'}

  = form_for @user, url: picture_path do |f|
    %p{style: 'margin: 14px 0 0 0'}
      = f.label :image, t('users.profile.avatar file')
    = f.file_field :image
    %p{style: 'margin-top: 14px'}
      = t('users.profile.avatar help')
    %p
      = f.submit t('my picture')