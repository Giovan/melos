- @main_nav = false

- content_for :sidebar do
  = render partial: "widgets/download_app"

.row
  .columns
    %article.centered
      = image_tag("email.png", :class => "img-email")
      %p= t("users.confirm message", email: @email)
      %p= t("users.confirm message click")
      %hr
      = link_to(t('users.resend verification'), "javascript:$('#resend').click();")
      = form_tag resend_confirmation_path do
        %p.hide
          = text_field_tag :email, @email
          = submit_tag(t('users.resend verification'), :id => "resend")