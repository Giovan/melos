- @sidebar = false
-# needs i18n keys added
- @title = @me ? "My Highlights" : (@user.name || @user.username)
- content_for :title do
  = @title

- if @highlights.present?
  .social-feed-wrap
    .social-feed
      = render partial: "moments/cards", locals: {moments: @highlights, comments_displayed: false}
  - if @highlights.next_page
    = render partial: "shared/moments_load_more", locals: {resource: "highlights", url_params: ["uid=#{@user.id}"]}
    
- else
  .profile-blank-slate.slate-highlights
    - if current_user_is? @user
      %h2
        = t("highlights.blank slate.heading")
      %p
        = t("highlights.blank slate.description")
    - else
      %h2
        = t("highlights.none user", username: @user.name)