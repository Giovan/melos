- @sidebar = false
-# needs i18n keys added
- @title = @me ? "My Highlights" : (@user.name || @user.username)
- content_for :title do
  = @title

.social-feed-wrap{"data-username" => @user.username, "data-kind" => "highlight"}
  :javascript
    $(document).ready(function(){
      var feed = new Moments.UserFeed();
    });

.row.ng-hide{"ng-show" => "moments.length == 0"}
  .columns.medium-12
    .profile-blank-slate.slate-highlights
      - if current_user_is? @user
        %h2
          = t("highlights.blank slate.heading")
        %p
          = t("highlights.blank slate.description")
      - else
        %h2
          = t("highlights.none user", username: @user.name)
.row.pad-row
  .medium-8.columns.medium-offset-2
    %div{"ng-repeat" => "moment in moments"}
      %moment{:data => "moment", "social-enabled" => "false"}
    %div{:layout => "row", "layout-align" => "space-around", "layout-sm" => "column", "ng-if" => "loading"}
      %md-progress-circular{"md-mode" => "indeterminate"}
    %button.solid-button.green.full{"ng-click" => "loadMore()", "ng-if" => "!loading"} Load More