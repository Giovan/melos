- @sidebar = false
-# needs i18n keys added
- @title = @me ? "My Highlights" : (@user.name || @user.username)
- content_for :title do
  = @title

.social-feed-wrap{"data-username" => @user.username, "data-kind" => "highlight"}
  :javascript
    $(document).ready(function(){
      var feed = new Moments.UserFeed();
    });


.profile-blank-slate.slate-highlights
  - if current_user_is? @user
    %h2
      = t("highlights.blank slate.heading")
    %p
      = t("highlights.blank slate.description")
  - else
    %h2
      = t("highlights.none user", username: @user.name)