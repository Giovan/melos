- @title = t('users.edit email')

- content_for :title do
  = t('users.settings')

- content_for :sidebar do
  = render partial: "widgets/settings"

%article
  = render partial: "users/mobile_menu", locals: {selected: :email}
  
  - if @results and @results.valid?
    %p.confirmation-message
      = t('users.update email check')

  %p= t('users.update email copy')
  = render partial: "shared/form_errors", locals: {errors: @results.errors} if @results

  = form_for @user, url: update_email_user_path(@user) do |u|
    %p
      = u.text_field :email
      = button_tag t('users.edit email'), class: "action_button_green"
