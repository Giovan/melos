:ruby
  @sidebar          = false
  @title            = "World Meeting of Families Bible App - #{t('mobile page.download now')}"
  @meta_title       = "World Meeting of Families Bible App - #{t('mobile page.download now')} - #{t('mobile page.free overlay')}"
  @meta_description = t("meta.mobile.description")
  @meta_url          = "https://#{request.host_with_port}#{request.fullpath}"

- content_for :stylesheets do
  = stylesheet_link_tag "slick.css"

- content_for :additional_meta do
  %meta{name: "url",            content: @meta_url}
  %meta{property: "og:title",       content: @meta_title }
  %meta{property: "og:url",         content: @meta_url }
  %meta{property: "og:description", content: @meta_description }
  %meta{name: "twitter:card",             content: "app"}
  %meta{name: "twitter:site",             content: "@YouVersion"}
  %meta{name: "twitter:description",      content: @meta_description}
  %meta{name: "twitter:image",            content: url_for(image_path(localized_bible_icon(120)))}
  %meta{name: "twitter:app:name:iphone", content: "Bible"}
  %meta{name: "twitter:app:id:iphone", content: "282935706"}
  %meta{name: "twitter:app:url:iphone", content: "youversion://"}
  %meta{name: "twitter:app:name:ipad", content: "Bible"}
  %meta{name: "twitter:app:id:ipad", content: "282935706"}
  %meta{name: "twitter:app:url:ipad", content: "youversion://"}
  %meta{name: "twitter:app:name:googleplay", content: "Bible"}
  %meta{name: "twitter:app:id:googleplay", content: "com.sirma.mobile.bible.android"}
  %meta{name: "twitter:app:url:googleplay", content: "youversion://"}

%article.mobileapps
  - style = "position:absolute; z-index:1; margin-left: 572px; margin-top: -131px; height:80px; width:80px; background: url(#{image_path(localized_bible_icon(72))}); background-repeat: no-repeat;background-size:cover !important;" if localized_bible_icon
  %div.icon-overlay.hide-mobile{style: style}
  %div.app-free-overlay.hide-mobile
    %h2= t('mobile page.free overlay')
  - if I18n.locale.to_s.eql?('en')
    %h2.title{style: "font-size: 26px; margin-bottom:15px; font-weight:200;"}
      God's Word is with you, following the World Meeting of Families

  - # non-english get default content
  - unless I18n.locale.to_s.eql?('en')
    %section#mobile_content
      %h2.title= t('mobile page.h2')
      %section.main
        %p= t('mobile page.main').html_safe
      %section.multilingual
        - style = "z-index:1; margin:0 auto; height:72px; width:72px; background: url(#{image_path(localized_bible_icon(72))}) center 2px no-repeat;background-size: 72px 72px;" if localized_bible_icon
        %div.multi
          %div.icon-overlay{style: style}
        -#= image_tag "mobile_multilingual.png"
        %h3= t('mobile page.h3')
        %p= t('mobile page.h3 sub', language_count: 900)
    %section#mobile_downloads
      %h1= t('mobile page.download now')
      %ul.left_column
        %li#dl_iphone
          %h2= link_to t('mobile page.iphone ipad'), "http://itunes.apple.com/app/bible/id282935706"
        - if I18n.locale.to_s.eql?('zh-CN')
          %li#dl_android
            %h2= link_to "#{t('mobile page.android')} - 豌豆荚", "http://www.wandoujia.com/apps/com.sirma.mobile.bible.android"
        %li#dl_android
          %h2= link_to t('mobile page.android'), "https://market.android.com/details?id=com.sirma.mobile.bible.android"
        %li#dl_blackberry
          %h2= link_to t('mobile page.blackberry'), "http://appworld.blackberry.com/webstore/content/1222/"
        %li#dl_windows
          %h2= link_to t('mobile page.windows phone'), "http://windowsphone.com/s?appid=57f524fa-93e3-df11-a844-00237de2db9e"
        %li#dl_windows8
          %h2= link_to t('mobile page.windows 8'), "http://apps.microsoft.com/webpdp/app/bible/af5f6405-7860-49a9-a6b4-a47381974e1d"
      %ul.right_column
        %li#dl_hppalm
          %h2= link_to t('mobile page.hp palm'), "https://developer.palm.com/appredirect/?packageid=com.youversion.palm"
        %li#dl_java
          %h2= link_to t('mobile page.java'), "http://java.apps.opera.com/en_us/bible_000261.html"
        %li#dl_symbian
          %h2= link_to t('mobile page.symbian'), "http://java.apps.opera.com/en_us/bible_000261.html"
        %li#dl_mobile
          %h2= link_to t('mobile page.mobile web'), "http://www.bible.com"
        %li#dl_amazon
          %h2= link_to t('mobile page.amazon'), "http://www.amazon.com/YouVersion-Bible/dp/B004MC8CA2"
      %a.cta
        %h4
          = t('mobile page.button h4').html_safe

      = render partial: '/shared/sms_form'
  - else
    - # WMF content for english
    %section#mobile_content
      = image_tag "wmf-hero.jpg", size: "430x179", alt: "World Meeting of Families - Philadelphia 2015", style: "margin-bottom: 20px;"
      How can you celebrate your family - a sanctuary of love and life - after you leave World Meeting of Families?
      Start a 21-day Lectio Divina devotional and journey through the Gospel of Luke with your family or community.
      As you listen to God's Word, and meditate on stories of hope and healing, allow the Sacred Scripture to transform
      your understanding of God's unconditional love.
      %br
      %br
      Get the devotional plus tailored content all for free on the YouVersion Bible App.  Simply go to <b>app.bible.com/wmf</b> on
      your Apple or Android device to get the app and access this free content.  Or, use the option on this page to text a link to your device.
      %br
      %br
      Millions of people are using the Bible App&trade; to make God's Word a part of their daily lives.  Download the free app
      and access your Highlights, Bookmarks, Notes, Verse Images, and Bible Plans from anywhere.  Enjoy hundreds of versions, including audio,
      all on your mobile device.

    %section#mobile_downloads
      %a.cta
        %h4
          Go to app.bible.com/wmf on your Apple or Android device.

      = render partial: '/shared/sms_form'

      %h1= t('mobile page.download now')

      %i
        Custom World Meeting of Families content<br>available on iOS and Android Devices.
      %br

      %ul.left_column
        %li#dl_iphone
          %h2= link_to t('mobile page.iphone ipad'), "http://itunes.apple.com/app/bible/id282935706"
        - if I18n.locale.to_s.eql?('zh-CN')
          %li#dl_android
            %h2= link_to "#{t('mobile page.android')} - 豌豆荚", "http://www.wandoujia.com/apps/com.sirma.mobile.bible.android"
        %li#dl_android
          %h2= link_to t('mobile page.android'), "https://market.android.com/details?id=com.sirma.mobile.bible.android"
        %li#dl_blackberry
          %h2= link_to t('mobile page.blackberry'), "http://appworld.blackberry.com/webstore/content/1222/"
        %li#dl_windows
          %h2= link_to t('mobile page.windows phone'), "http://windowsphone.com/s?appid=57f524fa-93e3-df11-a844-00237de2db9e"
        %li#dl_windows8
          %h2= link_to t('mobile page.windows 8'), "http://apps.microsoft.com/webpdp/app/bible/af5f6405-7860-49a9-a6b4-a47381974e1d"
      %ul.right_column
        %li#dl_hppalm
          %h2= link_to t('mobile page.hp palm'), "https://developer.palm.com/appredirect/?packageid=com.youversion.palm"
        %li#dl_java
          %h2= link_to t('mobile page.java'), "http://java.apps.opera.com/en_us/bible_000261.html"
        %li#dl_symbian
          %h2= link_to t('mobile page.symbian'), "http://java.apps.opera.com/en_us/bible_000261.html"
        %li#dl_mobile
          %h2= link_to t('mobile page.mobile web'), "http://www.bible.com"
        %li#dl_amazon
          %h2= link_to t('mobile page.amazon'), "http://www.amazon.com/YouVersion-Bible/dp/B004MC8CA2"


  %div.clear

%script{type: "application/ld+json"}
  {
  "@context": "http://schema.org/",
  "@type": "MobileApplication",
  "name": "#{t('bible')}",
  "image": "#{url_for(image_path(localized_bible_icon(120)))}",
  "description": "#{t("meta.mobile.description")}",
  "aggregateRating":{
  "@type": "AggregateRating",
  "ratingValue": "4.6",
  "ratingCount": "1,229,869"
  },
  "offers":{
  "@type": "Offer",
  "price": "Free"
