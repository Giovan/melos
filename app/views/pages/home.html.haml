:ruby
  @title            = "#{t('pages.home.features.read heading')} #{t(".hero.heading")}"
  @meta_description = t("meta.mobile.description")
  @meta_url          = "#{request.protocol}#{request.host_with_port}#{request.fullpath}"

- @main_nav = false
- @sidebar = false
- rtl_class = is_rtl? ? "rtl" : ""

- content_for :javascripts do
  = javascript_include_tag "campaigns/100m/jquery.counter.js"

- content_for :typekit_javascripts do
  = javascript_include_tag '//use.typekit.net/mgk8ovf.js'
  :javascript
    try{Typekit.load();}catch(e){}

- content_for :additional_meta do
  = render '/shared/hreflang'
  - locale_dir = (I18n.locale.to_s.eql?("en") or I18n.locale.to_s.eql?("en-GB")) ? '' : '/' + I18n.locale.to_s
  - canonicalHref = "https://#{request.host_with_port}#{locale_dir}"
  - version_id = Version.default_for(I18n.locale.to_s.eql?('en-GB') ? "en" : I18n.locale)
  %link{rel: "alternate", href: "android-app://com.sirma.mobile.bible.android/youversion/bible?reference=JHN.1&version=#{version_id}"}
  %link{rel: "alternate", href: "ios-app://282935706/youversion/bible?reference=JHN.1&version_id=#{version_id}"}
  %link{rel: "canonical", href: canonicalHref}
  %meta{name: "url",            content: @meta_url}
  %meta{property: "og:title",       content: @title }
  %meta{property: "og:url",         content: @meta_url }
  %meta{property: "og:description", content: @meta_description }
  %meta{name: "twitter:card",             content: "summary"}
  %meta{name: "twitter:url",              content: "#{request.protocol}#{request.host_with_port}#{request.fullpath}"}
  %meta{name: "twitter:title" ,           content: @title}
  %meta{name: "twitter:description",      content: @meta_description}
  %meta{name: "twitter:image",            content: url_for(image_path(localized_bible_icon(120)))}
  %meta{name: "twitter:site",             content: "@YouVersion"}

= cache "bdc_welcome_#{I18n.locale}", expires_in: YV::Caching.a_short_time do
  .row.full
    .columns.medium-12.text-right
      %form
        %div{"skip-home" => true, "set-cookie" => "setCookie", "delete-cookie" => "deleteCookie", "now-skipped-text" => "#{html_escape(t(".hero.now skipped"))}", "future-skip-text" => "#{html_escape(t(".hero.skip in future"))}"}
          -#%input{type:"checkbox", name:"skip", checked: cookies["setting-skip-home"], id:"setting-skip-home"}
          %label{for:"setting-skip-home",id:"label-setting-skip-home"}
            =t(".hero.skip in future")
  .row
    .columns.large-7.medium-8.text-center.medium-centered
      %h1.heading
        %img.home-bible-icon{src: "#{image_path(localized_bible_icon(120))}"}
        %p
          = t("pages.home.heading")

      =link_to(t("pages.home.cta"), bible_path, class: 'solid-button green padded mobile-full', target: "_self")

  .row.text-center
    .columns.medium-4
      %img.heading{src: '/assets/read-stroked.png'}
      %h2.heading
        =t("pages.home.experience.title")
      %p.body-text.padded
        =t("pages.home.experience.body")
      =link_to(t("pages.home.experience.action"), versions_path, { class: "heading" })

    .columns.medium-4
      %img.heading{src: '/assets/highlight-stroked.png'}
      %h2.heading
        =t("pages.home.make_yours.title")
      %p.body-text.padded
        =t("pages.home.make_yours.body")
      =link_to(t("pages.home.make_yours.action"), sign_up_path, { class: "heading" })

    .columns.medium-4
      %img.heading{src: '/assets/smartphone-stroked.png'}
      %h2.heading
        =t("pages.home.install_now.title")
      %p.body-text.padded
        =t("pages.home.install_now.body")
      =link_to(t("pages.home.install_now.action"), app_page_path, { class: "heading" })

  .votd-row
    .row
      .columns.medium-11.medium-centered
        %img.votd-image{src: 'http://placehold.it/400'}

  .row
    .columns.medium-6.medium-centered.text-center
      %img.heading{src: '/assets/plans-stroked.png'}
      %h2.heading
        =t("pages.home.free_plans.title")
      %p.body-text
        =t("pages.home.free_plans.body")

  .row.featured-plans-row
    .columns.medium-9.text-center.medium-centered
      %ul.medium-block-grid-3
        - if(@featured_plans.present?)
          - @featured_plans.each do |plan|
            %li
              - if plan.list_image.present?
                = link_to(plan_path(plan, locale: I18n.locale), target: "_self") do
                  = image_tag plan.list_image.url, class: ''
              %p.fp-title
                = plan.name
              %div.fp-details
                %span.fp-length
                  = plan.length
                %div.dot
                = link_to(t('moments.action.start plan'), plan_path(plan, locale: I18n.locale), { class: 'fp-link', target: "_self" })
      =link_to(t("pages.home.browse_plans"), plans_path, { class: 'browse-plans-link' })

  %hr

  .row.start-now-row
    .columns.medium-7.text-center.medium-centered
      %h2.heading
        =t("pages.home.read_listen")
      %a.solid-button.green.padded.start-now-link
        =t("pages.home.start_now")
-#
  %article
    #hero.row{class: rtl_class}
      #hero_content.columns
        %h1
          = t(".hero.heading")
        %p
          = t(".hero.description")

        %span
          = link_to(t(".hero.start reading"), bible_path, class: 'solid-button green mobile-full', target: "_self")
          &nbsp;
          = t("or.lower")
          &nbsp;
          = link_to(t(".hero.learn more"),"#scroll-point", id: "scroll-anchor", target: "_self")


    .hero_pics
      &nbsp;

    .row.pad-row.bottom-cta
      .columns.large-8
        %h1{:style => "background-image: url(#{image_path(localized_bible_icon)})"}
          = t(".word with you")
        .row
          .columns.large-6.r-border
            %p= t(".download description")
          .columns.large-6
            %span.counter#download-counter
              %p#counter{ "install-counter" => true, "format" => "#{t("counter.format").gsub(" ", "&nbsp;")}" } &nbsp;
              %p= t(".world installs")
      .columns.large-4
        %img{src: "#{image_path('bdc_mobile_icons.png')}", class: "app-icons"}
        = link_to(t(".download action"), app_page_path, {class: 'solid-button green mobile-full', target: "_self"})

    .gray.pad-row.get-started
      .row
        .columns.medium-12.text-center
          %h1= t(".get started")
      .row.pad-row.explore-cta
        .columns.medium-12.text-center
          = link_to(t("registration.with facebook"), auth_connect_path(:facebook, redirect: facebook_sign_up_path), {class: 'solid-button mobile-full blue', target: "_self"})
          %span.or.pad-all
            = t("or.upper")
          = link_to(t("registration.with email"), sign_up_path, {class: 'solid-button mobile-full gray', target: "_self"})
      .row.pad-row.text-center.home-features
        #scroll-point.columns.large-3.medium-12.small-12.read-bible
          %div.white.pad-all.round.text-left
            %h2= t(".features.read heading")
            %p
              %span.narrow= t(".features.read description", versions_path: versions_path).html_safe

        .columns.large-3.medium-12.small-12.study-bible
          %div.white.pad-all.round.text-left
            %h2= t(".features.study heading")
            %p
              %span.narrow= t(".features.study description").html_safe

        .columns.large-3.medium-12.small-12.subscribe-bible
          %div.white.pad-all.round.text-left
            %h2= t(".features.subscribe heading")
            %p
              %span.narrow= t(".features.subscribe description").html_safe

        .columns.large-3.medium-12.small-12.take-bible
          %div.white.pad-all.round.text-left
            %h2= t(".features.download heading")
            %p
              %span.narrow= t(".features.download description").html_safe

  = render '/shared/app_banner'

  - content_for :javascripts do
    :javascript

      // Fire off request for download stats jsonp
      $(window).load(function() {

        $("#scroll-anchor").on("click", function(e) {
          e.preventDefault();
          var pos = $("#scroll-point").offset().top;
          $('html:not(:animated),body:not(:animated)').animate({scrollTop:pos},{duration:1000});
        });

      });
