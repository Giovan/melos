- links = [{path: profile_path, string: t('users.edit profile')},
           {path: update_email_path, string: t('users.edit email')},
           {path: password_path, string: t('users.edit password')},
           {path: picture_path, string: t('users.edit picture')},
           {path: notifications_path, string: t('users.edit notifications')},
           {path: connections_path, string: t('users.edit connections')},
           {path: devices_path, string: t('users.edit devices')},
           {path: delete_account_path, string: t('users.edit account_existence')}]
.widget
  %header
    %span.header_icon_gear
      = t('users.settings')
  %ul.widget_menu
    - links.each do |l|
      %li
        = link_to_unless_current l[:string], l[:path] do
          %a.selected= l[:string]
