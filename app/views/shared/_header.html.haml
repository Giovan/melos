%header#header{:role => 'banner'}
  %a#yv_logo{:href => '/'}
    =t("youversion")
  %nav
    %ul
      - if current_auth
        %li
          %a#header_profile_trigger{:href => '#'}
            %span
              %img{:src => current_avatar}
              =current_auth.username
          %ol#header_profile_menu
            %li
              %a{:href => profile_path}
                =t("settings")
            %li
              %a{:href => user_path(current_auth.username)}
                =t("profile")
            %li
              %a{:href => sign_out_path}
                =t("sign out")
        %li
          %a{:href => connections_path}
            %span
              =t("find friends")
      - else
        %li
          %p= link_to t("sign in"), sign_in_path, :class=> "sign_in"
        %li
          %p= link_to t("sign up"), sign_up_path, :class=> "sign_in"



  %form#header_search_form
    %input#header_search_input{:type => 'search', :placeholder => t("search placeholder")}
    %input#header_search_button{:type => 'submit', :value => t("search")}
