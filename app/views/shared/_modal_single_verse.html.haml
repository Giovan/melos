- verse = modal_verse
- content_for :javascripts do
  %script
    :plain
      var modal = new VerseModal();

#modal_single_verse.modal{:itemscope => true, :itemtype => 'http://schema.org/Article'}
  #modal_overlay.overlay &nbsp;
  #modal_window.window
    %header
      %a#modal_logo

      %span#modal_ref= verse.human
      - if version
        %span.separator |
        %span#modal_version
          = version
      &nbsp;

      %a.close{:href => '#'} Close
    %section
      %p.big{:itemprop => 'description'}= verse.content.html_safe
      %hr
      %p
        %a#single_verse_read_link.action_button_blue{:href => bible_path(reference)}= t("read reference", reference: reference.human)
      %p.mobile
        = link_to t('mobile page.download now'), '/download', class: 'action_button_green'

    %aside
      %div{style: "height: 36px;"}
        %a{href: "http://twitter.com/share", class: "twitter-share-button", "data-url" => verse.short_link, "data-counturl" => request.url, "data-text" => verse.content[0].chomp, via: "YouVersion", "data-count" => "horizontal", "data-related" => "youversion"} Tweet
        %script{type: "text/javascript", src: "http://platform.twitter.com/widgets.js"}
      %div{style: "height: 40px;"}
        %a{name: "fb_share", class: "fb_iframe_widget", type: "button_count", href: "http://www.facebook.com/sharer.php"} Share
        %script{src: "http://static.ak.fbcdn.net/connect.php/js/FB.Share", type: "text/javascript"}
      %div{style: "height: 40px;"}
        %g:plusone{size: "medium"}
        :javascript
          var po = document.createElement('script'); po.type = 'text/javascript'; po.async = true;
          po.src = 'https://apis.google.com/js/plusone.js';
          var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(po, s);
