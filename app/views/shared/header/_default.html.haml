                      %md-menu-item
                        %md-button{href:  @site.donate_path || donate_path}
                          = t("donate title")
                    %md-menu-item
                      .menu-title
                        Follow Us
                    %md-menu-divider
                    %md-menu-item
                      %md-button{href: blog_url(current_locale)}
                        = "Blog"
                    %md-menu-item
                      %md-button{href: "http://www.facebook.com/YouVersion"}
                        = "Facebook"
                    %md-menu-item
                      %md-button{href: "http://www.twitter.com/youversion"}
                        = "Twitter"
                    %md-menu-item
                      %md-button{href: "http://www.instagram.com/youversion"}
                        = "Instagram"
                    %md-menu-item
                      %md-button{href: "http://www.pinterest.com/lifechurchtv/youversion-the-bible-app/" }
                        = "Pinterest"
                    %md-menu-item
                      %md-button{href: "http://www.youtube.com/youversion" }
                        = "YouTube"

            .row.collapse.postfix-radius.hdr-search
              .small-7.small-offset-1.columns
                %input{type: 'search', name:"q", placeholder: t("search placeholder")}
              .small-2.end.columns
                %input.search.postfix.button{type: 'submit', value: ''}
                -if params[:version_id]
                  %input{type: 'hidden', name: "version_id", value: params[:version_id], extra:'first'}
                -elsif params[:version]
                  %input{type:'hidden', name:"version_id", value:params[:version], extra:'second'}

            - if current_auth
              .hdr-notify
                %a{:href => "#"}
              .hdr-profile
                %md-menu{"md-offset" => "-4 44", "md-position-mode" => "target-right target"}
                  -#href: user_path(current_user.username),
                  %a{ title: t("users.go to your profile"), "ng-click" => "ctrl.openMenu($mdOpenMenu, $event)"}
                    %img.hdr-profile-img{src: current_user.user_avatar_url["px_48x48"]}
                    - if current_user.first_name.present? and current_user.last_name.present?
                      %span.hdr-profile-name.large= current_user.first_name + " " + current_user.last_name
                      %span.hdr-profile-name.medium= current_user.username
                    -else
                      %span.hdr-profile-name= current_user.username
                  %md-menu-content.ng-hide{:width => "4", "ng-show" => "true"}
                    %md-menu-item
                      %md-button{href: highlights_user_path(current_auth.username)}
                        =t("highlights.title")
                    %md-menu-item
                      %md-button{href: bookmarks_user_path(current_auth.username)}
                        =t("bookmarks.title")
                    %md-menu-item
                      %md-button{href: notes_user_path(current_auth.username)}
                        =t("notes title")
                    %md-menu-item
                      %md-button{href: images_user_path(current_auth.username)}
                        =t("users.my images")
                    %md-menu-item
                      %md-button{href: user_friends_path(user_id: current_auth.username)}
                        =t("users.profile.tab friends")
                    %md-menu-item
                      %md-button{href: badges_user_path(current_auth.username)}
                        =t("badges title")
                    %md-menu-divider
                    %md-menu-item
                      %md-button{href: "/settings"}
                        =t("settings")
                    %md-menu-item
                      %md-button{href: sign_out_path}
                        =t("sign out")

            - else
              .sign-inup
                = link_to t("sign in"), sign_in_path(redirect: params[:redirect]), class: "hollow-button sign-in"
                = link_to t("sign up"), sign_up_path(redirect: params[:redirect]), class: "hollow-button sign-up"



