#header_outer
  - if ENV['DISPLAY_MOBILE_BANNER'] == "true" # use Heroku config var to turn off/on mobile banner.
    .mobile
      %div#beta-banner
        %span
          Mobile Beta
        =link_to("Feedback", "mailto:mobilewebfeedback@youversion.zendesk.com?Subject=Mobile%20Beta%20Feedback")

  %header#header{role:"banner"}
    =link_to(@site.title, "/" , style: "#{@site.logo_style}; background-image: url(#{asset_path(@site.logo_image)})", id:"logo")

    %a{href: "#", class: "friend-requests-btn popover-link"}
      =t("requests")

    -# Friends and notification popovers
    %div.header-popover
      %span.arrow
      %h4
        =t("Friend requests")
      =link_to("Find Friends", "#", class: "find-friends text-link")
      %span.clear

      %ul
        %li
          %div.list-item
            %div.item-content
              %img.round-avatar{src: "/assets/round-avatar-FPO.png"}
              = link_to("Peter Smith", "#", class: "text-link")
              %p
                =t("wants to be your friend")
              %span.timestamp
                =t("12 days ago")
            %div.item-actions
              =link_to("Add", "#", class: "action_button_green")
              =link_to("Ignore", "#", class: "action_button_grey")

        %li
          %div.list-item
            %div.item-content
              %img.round-avatar{src: "/assets/round-avatar-FPO.png"}
              = link_to("Peter Smith", "#", class: "text-link")
              %p
                =t("wants to be your friend")
              %span.timestamp
                =t("12 days ago")
            %div.item-actions
              =link_to("Add", "#", class: "action_button_green")
              =link_to("Ignore", "#", class: "action_button_grey")

        %li
          %div.list-item
            %div.item-content
              %img.round-avatar{src: "/assets/round-avatar-FPO.png"}
              = link_to("Peter Smith", "#", class: "text-link")
              %p
                =t("wants to be your friend")
              %span.timestamp
                =t("12 days ago")
            %div.item-actions
              =link_to("Add", "#", class: "action_button_green")
              =link_to("Ignore", "#", class: "action_button_grey")


      %div.view-all
        =link_to("View all requests", "#", class: "text-link wide")



    %a{href: "#", class: "notifications-btn popover-link"}
      =t("notifications")

    %div.header-popover.notifications
      %span.arrow
      %h4
        =t("Notifications")
      %span.clear

      %ul
        %li
          %div.list-item
            %p
              = link_to("Peter Smith", "#", class: "text-link")
              =t("wants to be your friend")

      %div.view-all
        =link_to("View all Notifications", "#", class: "text-link wide")

    -# Sign in and user id
    %nav.sign_in
      %ul
        - if current_auth
          = cache "header_#{current_auth.username}_#{I18n.locale}", expires_in: YV::Caching.a_short_time do
            %li
              %a#header_profile_trigger{:href => '#'}
                %span
                  %img{src: current_avatar}
              %ol#header_profile_menu
                %li
                  %a{href: "/settings"}
                    =t("settings")
                %li
                  %a{href: user_path(current_auth.username)}
                    =t("profile")
                %li
                  %a{href: sign_out_path}
                    =t("sign out")

        - else
          = cache "header_anon_#{I18n.locale}", expires_in: YV::Caching.a_short_time do
            %li
              %p= link_to t("sign in"), sign_in_path(redirect: params[:redirect]), class: "sign_in"
            %li
              %p= link_to t("sign up"), sign_up_path(redirect: params[:redirect]), class: "sign_in"

    .mobile
      - if content_for? :mobile_left_nav
        = yield :mobile_left_nav
      - else
        %a#slideToNav.nav_btn{href: 'javascript:void(0);'}
          View Navigation
      - if content_for? :title
        %h1#page_title= yield :title
      - if content_for? :title_link
        %h1#chapter_title= yield :title_link
      - if content_for? :mobile_right_nav
        %nav.right_nav
          - if content_for? :mobile_subscription_nav
            = yield :mobile_subscription_nav
          - else
            = yield :mobile_right_nav

    %form#header_search_form{action: search_path, method: "GET"}
      %input#header_search_input{type: 'search', name:"q", placeholder: t("search placeholder")}
      %input#header_search_button{type: 'submit', value: t("search")}
      - if params[:controller] == "search"
        -if params[:category]
          %input{type: 'hidden', name: "category", value: params[:category]}
        -if params[:version]
          %input{type: 'hidden', name: "version", value: params[:version]}
