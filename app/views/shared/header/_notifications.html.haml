%div.header-popover.notifications
  %span.arrow
  %h4 Notifications
  %span.clear
  .popover-data-container
    %ul.notifications-list
      %li.notifications-item
        %p.loading-indicator Loading ...
  .view-all
    %a.text-link.wide{href:"/notifications"}
      View all Notifications

%script#notifications-tmpl{type:"text/x-handlebars-template"}
  :plain
    <ul class="notifications-list">
      {{#each notifications}}
      <li class="notifications-item">  
        <p>{{attributes.moment_title}}</p>
      </li>
      {{/each}}
    </ul>