-# Friends and notification popovers
%div.header-popover.friend-requests



%script#friend-requests-tmpl{type:"text/x-handlebars-template"}
  :plain
    <span class="arrow"></span>
    <h4>Friend Requests</h4>
    <a href="#" class="find-friends text-link">Find Friends</a>
    <span class="clear"></span>

    <ul>
      {{#each incoming}}
      <li>  
        <div class="list-item">
          <div class="item-content">
            <img class="round-avatar" src="{{avatars.collection.1.url}}" height="48" width="48" />
            <a href="/users/{{username}}" class="text-link">{{name}}</a>
            <p>wants to be your friend</p>
          </div>
          <div class="item-actions">
            <a href="#" class="action_button_green action-add" data-user-id="{{id}}" >Add</a>
            <a href="#" class="action_button_grey action-ignore" data-user-id="{{id}}" >Ignore</a>
          </div>
        </div>
      </li>
      {{/each}}
    </ul>
    <div class="view-all">
      <a href="/friendships/incoming" class="text-link wide">View all requests</a>
    </div>