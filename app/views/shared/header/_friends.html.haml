- # handlebars templates are in /assets/js/templates/menus
%div.header-popover.friend-requests#requests-menu{"data-str-wants-friendship"=>t("friendships.user wants friendship partial"), "data-str-accept" => t("friendships.form.accept button"), "data-str-ignore" => t("friendships.form.ignore button"), "data-str-no-requests" => t("friendships.requests none"), "data-str-view-all" => t("friendships.requests view all"), "data-str-none"=>t("friendships.requests no new")}
  %span.arrow
  %h4
    = t("friendships.find friends title")
  %form.requests-user-search{action: search_path(category: :users), method: "GET"}
    %input.requests-field-query{type: "text", name: "q", placeholder: t("friendships.search by name")}
    %input.requests-field-submit{type: "submit", value: t("friendships.search button")}

  %h4
    = t("friendships.requests title")
  %span.clear
  .popover-data-container
    %ul
      %li
        %p.loading-indicator
          = t("ui.loading indicator text")