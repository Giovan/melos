= cache "#{@site}_footer_#{current_locale}", expires_in: YV::Caching.a_long_time do
  %footer#footer{role: "contentinfo", class: footer_classes}
    %p.links
      = link_to( t("now"), external_url(:now))
      = link_to( t("about"), about_path)
      = link_to( t("versions link"), versions_path)
      = link_to( t("jobs"), "https://www.youversion.com/jobs")
      = link_to( t("privacy policy"), privacy_path)
      = link_to( t("terms"), terms_path)
      = link_to( t("press"), press_path)
      = link_to( t("get support"), external_url(:support) )
      - if @site.allow_donate? && [:es, :"es-ES", :pt, :"pt-PT", :"pt", :tr].exclude?(current_locale)
        = link_to( t("donate title"), (@site.donate_path || donate_path))
    - unless ENV['RACK_ENV'] =~ /production/i
      %p.small.mute.environment
        ="Non-production deployment, pointing at: #{Cfg.try :api_root}"
    = render partial: "shared/language_selector"

    .copyright
      %span= "&copy; #{Date.today.year}".html_safe
      = link_to( t("lifechurch short url"),'http://www.lifechurch.tv')

    %p.social-links
      = link_to("Blog", blog_url(current_locale), class: "blog")
      = link_to("Facebook", "http://www.facebook.com/YouVersion", class: "fb", rel: "nofollow")
      = link_to("Twitter", "http://www.twitter.com/youversion", class: "tw", rel: "nofollow")
      = link_to("Instagram", "http://www.instagram.com/youversion", class: "ig", rel: "nofollow")
      = link_to("Pinterest", "http://www.pinterest.com/lifechurchtv/youversion-the-bible-app/", class: "pn", rel: "nofollow")
      = link_to("YouTube", "http://www.youtube.com/youversion", class: "yt", rel: "nofollow")

