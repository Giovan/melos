#nav_primary{:role => "navigation"}
  %nav
    %ul
      %li#nav_primary_bible{class: @nav == :bible ? "highlighted" : ""}
        %a.icon{:href => '/bible'}
          %span &nbsp;
        %a.tooltip{href: "/bible", style: "display: none;"}
          %span= t('bible')
