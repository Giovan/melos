#nav_primary{:role => "navigation"}
  %nav
    %ul
      %li#nav_primary_bible{class: @nav == :bible ? "highlighted" : ""}
        %a{:href => '/bible'}
          %span=t("bible")
      %li#nav_primary_bookmarks{class: @nav == :bookmarks ? "highlighted" : ""}
        %a{:href => current_auth ? user_bookmarks_path(current_auth.username) : sign_up_path(source: "bookmark", redirect: "/bookmarks")}
          %span Bookmarks
      %li#nav_primary_plans
        %a{:href => current_auth ? user_plans_path(current_auth.username) : plans_path}
          %span=t("plans title")
      %li#nav_primary_notes{class: @nav == :notes ? "highlighted" : ""}
        %a{:href => current_auth ? user_notes_path(current_auth.username) : notes_path}
          %span=t("notes title")
      %li#nav_primary_friends
        %a{:href => current_auth ? user_following_path(current_auth.username) : sign_up_path(source: "friends", redirect: "/friends")}
          %span=t("friends")
      %li#nav_primary_mobile
        %a{:href => '/mobile'}
          %span=t("mobile")
