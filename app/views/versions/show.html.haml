- content_for :sidebar do

  .widget.sticky.gutter_bottom_half
    = link_to t("versions.read title"), bible_path((last_read || default_reference).merge(version: @version)), class: 'action_button_blue'

  - if @version.publisher.name.present?
    .widget
      %header
        %span
          =t("versions.publisher widget title")
      %ul.widget_menu
        %li
          - if @version.publisher.url.present?
            = link_to @version.publisher.name, @version.publisher.url
          -else
            %p= @version.publisher.name

  - if @related.present?
    .widget
      %header
        %span
          =t("versions.other versions")
      %ul.widget_menu
        - @related.each do |v|
          %li
            = link_to v
%article
  %h1= @version
  %h4= @version.publisher.try :name
  .copyright= @version.info.try :html_safe