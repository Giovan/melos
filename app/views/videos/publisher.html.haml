- html_attributes(id:"video-publisher")
- @title = "#{t('videos.title')}: #{@publisher.name.html_safe}"

- content_for :meta_description do
  = @title

- content_for :sidebar do
  = render partial: "sidebars/videos/publisher", locals: {video: @video, publisher: @publisher}

%article.videos-publisher
  %h1= @publisher.name.html_safe

  %p.video-info= @publisher.description.html_safe