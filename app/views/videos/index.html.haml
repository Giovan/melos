- html_attributes(id:"videos-index")
- @sidebar = false
- @title = "#{t('videos.watch videos')}"

- content_for :meta_description do
  = @title

%article
  .inner
    %h1= t("videos.title")

    %ul.resource_list
      - @videos.each do |v|
        %li.video{class:cycle('even', 'odd')}
          =link_to( series_video_path(id:v.id)) do
            = image_tag( v.thumbnails.second.url )
          %div.info
            =link_to(v.credits, publisher_video_path(id: v.id), {class: "publisher"})