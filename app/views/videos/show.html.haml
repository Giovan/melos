- html_attributes(id:"video-show",classes:"videos")
- publisher = @video.publisher
- @sidebar = false

%article
  #title-bar
    %h1= @video.title

    %span.publisher
      =link_to(@video.credits, publisher_video_path(id: @video.id))

    %span.share
      =link_to("Share","#")

  %video{width:908, height: 511}
    %source{type: "video/webm", src: @video.webm.url}

  - content_for :javascripts do
    :javascript
      $('video').mediaelementplayer({
        features: ['playpause','progress','current','duration','tracks','volume','fullscreen'],
        defaultVideoWidth: 908,
        defaultVideoHeight: 511,
        videoHeight: -1,
        videoWidth: -1
      });

  .inner

    #details
      %div.refs
        - if @video.references
          %span
            Related Scripture

          %ul
            - @video.references.each do |ref|
              %li
                %a= ref.human
      %p.description= @video.description.html_safe

    #other
      .videos-list
        %h5 Other videos in this series

        %ul
          %li
            =link_to(publisher_video_path(id: "test")) do
              Part 2 - Description would go here
          %li
            =link_to(publisher_video_path(id: "test")) do
              Part 3 - Description would go here
          %li
            =link_to(publisher_video_path(id: "test")) do
              Part 4 - Description would go here

  = render partial: "videos/publisher_banner", locals: {publisher: publisher}
