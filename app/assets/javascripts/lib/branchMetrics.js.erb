$(function() {
    branch.init('<%= Cfg.branch_key %>', function(err, data) {
      // callback to handle err or data

      branch.banner({
          // this icon logic needs tweaked, as this code will only be compiled once and will not i18n the icon
          icon: '<%= asset_path localized_bible_icon(200) %>',
          title: I18n.t('download ad.banner title'),
          description: '',
          openAppButtonText: I18n.t('download ad.banner open'),         // Text to show on button if the user has the app installed
