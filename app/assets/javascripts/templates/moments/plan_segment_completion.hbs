<div class="moment" data-uuid="{{uuid}}" data-moment-id="{{id}}" data-moment-path="{{path}}" data-str-delete-confirm="Are you sure you want to delete this?">
  <div class="moment-top">
    <div class="moment-rp">
      <span class="moment-icon"></span>
      <span class="moment-avatar">
        <a href="{{user.path}}">
          <img src="{{avatar}}" />
        </a>
      </span>
      <span class="moment-time">
        {{created_dt}}
      </span>
      <h2 class="moment-rp-text">
        <a href="{{path}}" class="moment-title-link">
          {{{moment_title}}}
        </a>
      </h2>
      <div class="moment-rp-progress">
        <div class="progress_wrap">
          <div class="progress_bar_outer">
            <div class="progress_bar" data-percent-complete="{{{percent_complete}}}%">
              &nbsp;
            </div>
          </div>
          <div class="progress_counter">
            {{{segment}}} of {{{total_segments}}}
          </div>
        </div>
      </div>
    </div>
  </div>
  <div class="moment-btm">
    {{> moments/_actions_bar}}
    {{> moments/_comments}}
  </div>
</div>