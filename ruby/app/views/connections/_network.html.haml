-# Locals:
-# user (with at least one connection)
-# network

- connection_name = t("social.#{network}.name")
- connected = user.connections[network.to_s].present?
.row.network-row
  .columns.medium-12
    %span{class: "#{network.to_s}-connect"}
      = image_tag "#{network.to_s}-logo.svg", class: "network-logo #{"connected" if connected}"
      - if connected
        %a{href: delete_connection_path(network.to_sym), "data-confirm-text" => t('confirm danger'), "data-method" => "delete", rel: "nofollow", class: "connect-delete", target: "_self"}
          = t('social.remove connection')
        - if @error.present?
          %p.error= @error
      - else
        = link_to t('connect to', connection: connection_name ), new_connection_path(network.to_s), class: "connect-add"