%article
  %h1= t('register')
  %p= t('users.facebook sign up success')
  = form_for :user, url: facebook_sign_up_path do |f|
    = render partial: "shared/form_errors", locals: {errors: @user.errors}
    
    %p= "#{t('users.email address')}: #{@user.email}"
    %p
      = f.label :username, t("users.user name")
      %br
      = f.text_field :username
    %p
      = f.label :password, t("password prompt")
      %br
      = f.password_field :password
    %p
      = f.check_box :agree
      = f.label :agree, t("users.agreement", terms_link: link_to(t("users.terms and conditions"), terms_url())).html_safe
    %p
      = f.submit t("users.register")
