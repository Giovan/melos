.widget.widget-find-friends
  %h3.hd
    = t("friendships.widget.find friends title")

  .bd
    - # Sidebar User Search
    %form.sb-user-search{action: search_path(category: :users), method: "GET"}
      %input.sb-user-search-query{type: "text", name: "q", placeholder: t("friendships.widget.search by name")}
      %input.sb-user-search-submit{type: "submit", value: t("friendships.widget.search button")}